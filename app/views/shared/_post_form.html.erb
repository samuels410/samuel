<%= form_for(@post) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<%= f.text_field :title, placeholder: "Add Title" %>
<div class="field">
<%= f.text_area :content, placeholder: "Compose new post..." , :rows => 50, :cols => 600%>
</div>
<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>